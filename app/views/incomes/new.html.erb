<div class="title">
	<h2 class="index-title">収入入力画面</h2>
</div>

<div class="input-contents">
  <%= form_with(model: @income, local: true) do |f| %>

    <%= render "shared/income_error_messages", model: f.object %>
  
    <div class="weight-bold-text">
      カテゴリー
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:income_category_id, IncomeCategory.all, :id, :name, {}, {class:"select-box", id:"income-category"}) %>

    <div class="weight-bold-text">
      年月入力
      <span class="indispensable">必須</span>
    </div>
    <div class="input-year-month">
      <%= raw sprintf(
                  f.date_select(
                    :year_month,
                    class:'select-year-month',
                    use_month_numbers: true,
                    start_year: 2019,
                    end_year: Time.current.year,
                    discard_day: true,
                    date_separator: '%s'),
                  "<p> 年 </p>" ) + "<p> 月 </p>" %>
    </div>
    
    <div class="weight-bold-text">
      金額入力
      <span class="indispensable">必須</span>
    </div>
    <div class="value-weight-bold-text">
      ※カンマなし、半角数字で入力
    </div>
    <div class="input-value">
      <%= f.text_field :value, class: "money", size: 8 %>円
    </div>
    
    <div class="weight-bold-text">
      備考
      <span class="arbitrary">任意</span>
    </div>
    <%= f.text_field :description, class: "description" %>

    <div class="entry">
      <%= f.submit "登録する" ,class:"entry-btn" %>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>