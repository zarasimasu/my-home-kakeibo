<h2>収入入力画面</h2>

<%= form_with(model: @income, local: true) do |f| %>

  <%= render "shared/income_error_messages", model: f.object %>
  
  <div class="category">
    カテゴリー
    <span class="indispensable">必須</span>
  </div>
  <%= f.collection_select(:income_category_id, IncomeCategory.all, :id, :name, {}, {class:"select-box", id:"income-category"}) %>
  <div class="year-month">
    年月入力
    <span class="indispensable">必須</span>
  </div>
  <%= raw sprintf(
              f.date_select(
                :year_month,
                class:'select-year-month',
                use_month_numbers: true,
                start_year: 2019,
                end_year: Time.current.year,
                discard_day: true,
                date_separator: '%s'),
              "<p> 年 </p>" ) + "<p> 月 </p>" %>
  <div class="value">
   金額入力
   <span class="indispensable">必須</span>
  </div>
  <%= f.text_field :value, class: "money", size: 8 %>円
  <div class="description">
    備考
    <span class="arbitrary">任意</span>
  </div>
  <%= f.text_field :description, size: 30 %>
  <div class="entry">
    <%= f.submit "登録する" ,class:"entry-btn" %>
  </div>
  <%= render "shared/footer" %>
<% end %>
