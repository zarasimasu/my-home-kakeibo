<h2>収入一覧</h2>

<%= link_to "収入の新規登録", :new_income %>

<% if @income.present? %>
<table>
	<thead>
		<tr>
			<th>種類</th>
			<th>年月</th>
			<th>金額</th>
			<th>備考</th>
			<th>編集｜削除</th>
		</tr>
	</thead>
	<tbody>
		<% @income.each do |i| %>
			<tr>
				<td><%= IncomeCategory.find(i.income_category_id).name %></td>
				<td><%= i.year_month.strftime('%Y年%m月') %>
				<td>¥<%= i.value.to_s(:delimited) %></td>
				<td><%= i.description %></td>
				<td>
				<%= link_to "編集", edit_income_path(i.id) %>
			</tr>
		<% end %>
	</tbody>
</table>
 
<% else %>
	<p>登録されている収入がありません。</p>
<% end %>

<%= render "shared/footer" %>