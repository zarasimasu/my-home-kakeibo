<header class='top-page-header'>
  <div class='bar-contents'>
    <%= link_to "MyHome家計簿", "/", class:"title-icon" %>
  </div>
  <div class="nav">
    <ul class="lists-right">
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "btn btn--deepskyblue" %></li> 
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn--deepskyblue" %></li>
        <li><%= link_to "退会する", user_destroy_user_path(current_user.id), method: :delete, class: "btn btn--orange", data: { confirm: "退会しますか？  退会するとアプリ内はデータは削除されます。" } %></li>
      <% else %>
        <li><%= link_to "ログイン", new_user_session_path, class: "btn btn--deepskyblue" %></li>
        <li><%= link_to "新規登録", new_user_registration_path, class: "btn btn--deepskyblue" %></li>
      <% end %> 
    </ul>
  </div>
</header>
